# Git Configuration with Safety Checks
# Add these to your .gitconfig file

[alias]
    # Safe status check
    safe-status = !git status
    
    # Safe add (with confirmation)
    safe-add = !git add
    
    # Safe commit (with backup reminder)
    safe-commit = !echo "Remember: Your files are safe in Git once committed!" && git commit
    
    # NEVER create aliases for dangerous commands
    # DO NOT alias: clean, reset --hard, push --force

[core]
    # Prevent accidental force pushes
    pushDefault = simple
    
    # Keep reflog for recovery
    logAllRefUpdates = true
    reflogExpire = never

[help]
    # Show warnings for dangerous commands
    autocorrect = 0

# Safety hook (if you want to add pre-commit hooks)
# Place in .git/hooks/pre-commit

